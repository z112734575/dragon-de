<style>
    /*    why buy*/
    .green-home-whybar {
        height: 3.125vw;
        background-color: #000;
        max-width: 1200px;
        width: 100%;
    }

    .green-home-whybar-ship {
        font-size: .833vw;
        font-weight: 400;
        color: #858585;
        line-height: 2.292vw;
        margin-bottom: 0 !important;
        margin-left: 0;
        padding: 0;
    }

    .green-home-whybar-ship li {
        display: -webkit-box;
        display: -ms-flexbox;
        display: flex;
        -webkit-box-align: center;
        -ms-flex-align: center;
        align-items: center;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center
    }

    .green-home-whybar-ship img {
        margin-right: .625vw;
        width: 1.667vw;
        height: 1.667vw
    }

    .green-home-whybar-more {
        font-size: .833vw;
        font-weight: 400;
        color: #fff !important;
        margin-left: 3.646vw;
        text-decoration: none !important
    }

    @media (max-width: 767px) {
        .green-home-whybar {
            height: 60px;
        }

        .green-home-whybar-ship {
            font-size: 14px;
            line-height: 1.2;
            color: #00CC88;
        }

        .green-home-whybar-ship li {
            white-space: nowrap;
            font-size: 16px;
            margin-bottom: 0;
            line-height: 1;
        }

        .green-home-whybar-ship img {
            margin-right: 5px;
            width: 32px;
            height: 32px;
        }

        .green-home-whybar-more {
            font-size: 14px;
            margin-left: 10px;
        }
    }

    /*    why buy*/
</style>

{% assign settings = section.settings %}
<section style="background:#000;">
    <div class="green-home-whybar swiper">
        <ul class="green-home-whybar-ship swiper-wrapper">
            <li class="swiper-slide">
                <picture>
                    <source
                        srcset="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/Free_2x_503e2a3c-af52-466f-aa24-586942886a17.png?v=1673247795"
                        media="(max-width: 768px)">
                    <img src="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/Free.png?v=1654775435"
                        alt="free icon">
                </picture>
                {{ settings.reason1 }}
            </li>
            <li class="swiper-slide">
                <picture>
                    <source
                        srcset="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/risk_2x_141b1d3b-96d0-4f10-80a2-295a494ba8e0.png?v=1673247795"
                        media="(max-width: 768px)">
                    <img src="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/risk.png?v=1654775435"
                        alt="risk icon">
                </picture>
                {{ settings.reason2 }}
            </li>
            <li class="swiper-slide">
                <picture>
                    <source
                        srcset="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/price_2x_6faaaa46-ac33-4fd2-8a68-c3df60efc47c.png?v=1673247795"
                        media="(max-width: 768px)">
                    <img src="https://cdn.shopify.com/s/files/1/0257/5246/9566/files/price.png?v=1654775435"
                        alt="price icon">
                </picture>
                {{ settings.reason3 }}
            </li>
        </ul>
    </div>
</section>


<script>
    if (isMobile()) {
        const whybarSwiper = new Swiper('.green-home-whybar', {
            slidesPerView: 1,
            loop: true,
            autoplay: {
                delay: 5000,
            },
        })
    } else {
        const whybarSwiper = new Swiper('.green-home-whybar', {
            slidesPerView: 3,
            spaceBetween: 30,
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            }
        })
    }
</script>

{% schema %}
{
"name": "UGreen Whybuy bar",
"settings": [
{
"type": "header",
"content": "Whybuy Settings"
},
{
"type": "text",
"id": "reason1",
"label": "text1"
},
{
"type": "text",
"id": "reason2",
"label": "text2"
},
{
"type": "text",
"id": "reason3",
"label": "text3"
}
]
}
{% endschema %}