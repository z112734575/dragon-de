  <div id="bloggle_sideBar"  class="sideBar__showOnMobile">
        {% assign product = all_products[article.metafields.bloggle.sideproduct] %}
        {% if product.title != blank or article.tags contains "bloggle-preview" %}
        <div id="bggle--product-related">
        <p id="bggle-product-sideBar" class="bggle--sideBar--title ">Related product</p>
        <a id="bggle--product-related-link" href="{{product.url}}" bggle-product-title="{{ product.title }}" bggle-product-handle="{{ product.handle }}" >
          <div class="bggle--info-siderBar-product">
            <img class="bggle--product-item-img" src="{{product.images[0] | img_url: '420x420' }}" alt="{{ product.images[0].alt }}">
            <div class="bggle--product-info">
                
                <p id="bggle--product-title" class="bggle--product-title ">{{product.title}}</p>
                {% assign price = product.selected_or_first_available_variant.price %}
                {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
                  {% assign compareAtPrice = product.selected_or_first_available_variant.compare_at_price %}
                {% endif %}
                {% if compareAtPrice %}
                <div class="bggle--product-solde">
                   <p class="bggle--product-price"><span id="bggle--price">{{price | money }}</span></p>
                   <p class="bggle--product-compare-price">{{compareAtPrice | money }}</p>
                </div>
                {% else %}
                  <p class="bggle--product-price"><span id="bggle--price">{{price | money }}</span></p>
                {% endif %}
            </div>
          </div>
          <button class="bloggle--blog-item-button button--1636212963117">See Product</button>
        </a>
        </div>{% endif %}

        <div id="last-articles">
          <p id="bggle-latest-articles" class="bggle--sideBar--title ">Latest News</p>

          <div id="last-articles-container">
          {% assign count = 0 %}
          {% for recoArticle in blog.articles limit:4 %}
            {% unless recoArticle.title == article.title or count >= 3 %}
              {% assign count = count | plus: 1 %}
              <a class="bggle-latest-article" href="{{recoArticle.url}}">
                {% if recoArticle.image %}<img class="bggle-latest-article-img" src="{{ recoArticle.image | img_url }}" alt="">{% endif %}
                <p>{{recoArticle.title}}</p>
              </a>
            {% endunless %}
          {% endfor %}
          </div>
        </div>
    </div>
  </div>


  <script>
    function readingTime() {
      const text = document.getElementById("bloggle_rte").innerText;
      const wpm = 225;
      const words = text.trim().split(/\s+/).length;
      const time = Math.ceil(words / wpm);
      document.getElementById("time").innerText = time;
    }
    window.onload = function() {
      readingTime();
    }
  </script>
